@helper AccountSummary() 
{ 
    if(WebSecurity.IsAuthenticated && Roles.IsUserInRole(WebSecurity.CurrentUserName, "User")) { 
        <text> 
            <a href="@Href("~/User/Profile")">Welcome @WebSecurity.CurrentUserName  | </a>
            <a href="@Href("~/User/ShoppingCart")">Cart |</a> 
            <a href="@Href("~/Logout")">Logout</a>
        </text> 
    }
    else if(WebSecurity.IsAuthenticated && Roles.IsUserInRole(WebSecurity.CurrentUserName, "Admin")) { 
        <text> 
            <a href="@Href("~/Admin/Profile")">Welcome @WebSecurity.CurrentUserName  | </a>            
            <a href="@Href("~/Logout")">Logout</a>
        </text> 
    } 
    else { 
        <text> 
            <a href="@Href("~/Login")">Login |</a>              
            <a href="@Href("~/Signup")">Signup</a> 
        </text> 
    } 
}

@helper AS() 
{ 
    if (Roles.IsUserInRole(WebSecurity.CurrentUserName, "Admin")) 
    {
        <a href="@Href("~/Admin/Manage_Products")">Home</a>     
    }
    else
    {    
        <a href="@Href("~/default")">Home</a>    
    } 
}